<style type="text/css">
   body { background: rgba(244, 244, 244, 0.8) } /* Adding !important forces the browser to overwrite the default style applied by Bootstrap */
</style>
<style>
.btn-black {
  background: #000000;
  color: white;
}
</style>

<div class="align-items-center justify-content-center mx-auto w-50 bg-white p-5 m-5 rounded-5 shadow">

<h2 class="text-center fw-bold">Sign In</h2>

<br/>
<%= form_for("User", :url=> user_session_path) do |f| %>
  <div class="form-floating mb-3 rounded-5">
    <%= f.text_field :login, autofocus: true, class: "form-control bg-light rounded-4", placeholder: "Username" %>
    <%= f.label :login, class: "form-label" %>
  </div>

  <div class="form-floating mb-3">
    <!-- <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br /> -->
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control bg-light rounded-4", placeholder: "Password" %>
    <%= f.label :password, class: "form-label" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
    <br/>
  <% end %>

  <div class="actions text-center">
    <%= f.submit "Continue", class: "btn btn-black btn-lg rounded-4 w-100" %>
  </div>
  <br/>
  <hr/>
  <br/>
<% end %>
<%= render "devise/shared/links" %>

</div>